
<% if !current_user.view_id %>

  <%=form_with url: authentications_auth_path, :method => "get", :class => 'ui form', :id => 'auth-form' do |form|%>
    <%= form.text_field :view_id, :placeholder => "Provide your view id here" %>
    <%= form.submit "Update", :class => 'ui button' %>
  <%end%>

<%else%>

  <%= form_with model: @user, :class => 'ui form', :id => 'auth-update-form' do |form|%>
    <%= form.text_field :view_id%>
    <%= form.submit "Update", :class => 'ui button'%>
  <%end%>

<%end%>
